<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Calculator"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="bottom|end"
        android:padding="16dp"
        android:textSize="32sp"
        android:focusable="false"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="C"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>

            <Button android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="÷"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>

            <Button android:id="@+id/btnBrackets"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="( )"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>

            <Button android:id="@+id/btnDel"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="⌫"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>

            <Button android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>

            <Button android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>

            <Button android:id="@+id/btnMultiply"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="×"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>

            <Button android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>

            <Button android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>

            <Button android:id="@+id/btnMinus"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>

            <Button android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>

            <Button android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>

            <Button android:id="@+id/btnPlus"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="2"
                android:text="0"
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>

            <Button android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>

            <Button android:id="@+id/btnEquals"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="24sp"
                android:layout_margin="1dp"
                android:backgroundTint="#673AB7"/>
        </TableRow>
    </TableLayout>
</LinearLayout>